@page
@model ForumModel 
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Newest Posts";
    var user = await UserManager.GetUserAsync(User);
}

<div class="text-center">
    <h1 class="display-4">Mindful Movement</h1>
     <h2 class="display-4">Newest posts</h2>
</div>

<div class="row">
    @if(Model.Posts != null)
    {
        @foreach(var post in Model.Posts)
        {
           <div class="card m-2" style="width: 18rem">
               <img class="card-img-top" src="~/userImages/@post.Image" />
               <div class="card-body">
                   <h5 class="card-title">
                       <a asp-page="/ViewPost" asp-route-id="@post.Id">@post.Title</a>
                   </h5>
                   <p class="card-text">@post.Content</p>
                   <p class="card-text">@post.CategoryId</p>
                   <p class="card-text">@post.SubCategoryId</p>
                   @if(user != null && user.Id == post.UserId)
                    {
                        <a asp-route-deleteId="@post.Id" class="btn btn-primary">Ta bort</a>
                    }
                </div>
               <p class="card-footer">@post.Date @post.UserId</p> 
           </div>
        }
    }
</div>

@if(SignInManager.IsSignedIn(User))
{
    <p>User: @User.Identity.Name</p>
    <li><a asp-page="/CreatePost" asp-route-category="CreatePost">Create Post</a></li>
}
else
{
    <div class="alert alert-danger">To write your own posts, you need to be logged in.</div>
}

@page
@model SnackisApp.Pages.AdminRole.AdminCategoryManagerModel
@{
    ViewData["Title"] = "Admin Category Manager";
}

<h1>Admin Category Manager</h1>

<h2>Categories</h2>
@if (Model.Categories != null && Model.Categories.Count > 0)
{
    <ul>
        @foreach (var existingCategory in Model.Categories)
        {
            <li>
                @existingCategory.Name
                <a asp-page="./AdminCategoryManager" asp-route-changeExistingCategoryId="@existingCategory.Id">Edit</a>
                <a asp-page="./AdminCategoryManager" asp-route-deleteExistingCategoryId="@existingCategory.Id">Delete</a>
            </li>
        }
    </ul>
}
else
{
    <p>No categories available.</p>
}

<h2>Add or Edit Category</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="NewCategory.Name" class="control-label"></label>
        <input asp-for="NewCategory.Name" class="form-control" />
        <span asp-validation-for="NewCategory.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Category" class="btn btn-primary" />
    </div>
</form>

<h2>SubCategories</h2>
@if (Model.SubCategories != null && Model.SubCategories.Count > 0)
{
    <ul>
        @foreach (var existingSubCategory in Model.SubCategories)
        {
            <li>
                @existingSubCategory.Name
                <a asp-page="./AdminCategoryManager" asp-route-changeExistingSubCategoryId="@existingSubCategory.Id">Edit</a>
                <a asp-page="./AdminCategoryManager" asp-route-deleteExistingSubCategoryId="@existingSubCategory.Id">Delete</a>
            </li>
        }
    </ul>
}
else
{
    <p>No subcategories available.</p>
}

<h2>Add or Edit SubCategory</h2>
<form method="post" asp-page-handler="SubCategory">
    <div class="form-group">
        <label asp-for="NewSubCategory.Name" class="control-label"></label>
        <input asp-for="NewSubCategory.Name" class="form-control" />
        <span asp-validation-for="NewSubCategory.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewSubCategory.CategoryId" class="control-label"></label>
        <select asp-for="NewSubCategory.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control"></select>
        <span asp-validation-for="NewSubCategory.CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save SubCategory" class="btn btn-primary" />
    </div>
</form>

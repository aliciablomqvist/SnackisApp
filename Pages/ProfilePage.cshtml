@page
@model ProfilePageModel
@{
    ViewData["Title"] = "Upload Profile Image";
}

<head>
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
</head>

<h2>Upload Profile Image</h2>

<form method="post" enctype="multipart/form-data" class="upload-profile-form">
    <div class="form-group">
        <label asp-for="ProfileImage">Profile picture</label>
        <input asp-for="ProfileImage" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
    <ul>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
